#!/usr/bin/env bash
# =============================================================================
# Minimal Bash Configuration
# Basic setup with aliases only - No functions
# =============================================================================

# Exit if not interactive
[[ $- != *i* ]] && return

# =============================================================================
# Basic Settings
# =============================================================================
HISTCONTROL=ignoreboth
HISTSIZE=10000
HISTFILESIZE=20000
shopt -s histappend
shopt -s checkwinsize

# =============================================================================
# Editor
# =============================================================================
export EDITOR="${EDITOR:-vi}"
export PAGER="less"

# =============================================================================
# PATH
# =============================================================================
[[ -d "$HOME/.local/bin" ]] && PATH="$HOME/.local/bin:$PATH"
export PATH

# =============================================================================
# Aliases - Navigation
# =============================================================================
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'

# =============================================================================
# Aliases - Listing
# =============================================================================
case $(uname -s) in
    Linux*) 
        alias ls='ls --color=auto'
        alias ll='ls -alF'
        alias la='ls -A'
        alias l='ls -CF'
        ;;
    Darwin*)
        alias ls='ls -G'
        alias ll='ls -alFG'
        alias la='ls -AG'
        alias l='ls -CFG'
        ;;
esac

# =============================================================================
# Aliases - Safety
# =============================================================================
alias cp='cp -i'
alias mv='mv -i'
alias rm='rm -i'

# =============================================================================
# Aliases - Grep
# =============================================================================
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

# =============================================================================
# Aliases - Git Shortcuts
# =============================================================================
alias g='git'
alias gst='git status'
alias gd='git diff'
alias gco='git checkout'
alias gp='git push'
alias gl='git pull'

# =============================================================================
# Aliases - Config Edit
# =============================================================================
alias bashrc="$EDITOR ~/.bashrc"
alias reload='source ~/.bashrc'

# =============================================================================
# Local Config
# =============================================================================
[[ -f ~/.bashrc.local ]] && source ~/.bashrc.local
